{
  "manifest_version": 3,
  "name": "Netflix Remote Elder Control",
  "version": "1.0",
  "description": "Helper extension for the Elder Netflix Remote Control Electron app.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "nativeMessaging"
  ],
  "host_permissions": [
    "*://*.netflix.com/*"
  ]
}
